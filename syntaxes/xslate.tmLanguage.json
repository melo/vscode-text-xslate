{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Text::Xslate",
  "scopeName": "text.html.xslate",
  "fileTypes": ["tx", "xslate"],
  "patterns": [
    {
      "include": "#xslate-comment-tag"
    },
    {
      "include": "#xslate-tag"
    },
    {
      "include": "#xslate-line-directive"
    },
    {
      "include": "text.html.basic"
    }
  ],
  "repository": {
    "xslate-comment-tag": {
      "name": "comment.line.xslate",
      "match": "(<:)(#)(.*?)(:>)",
      "captures": {
        "1": {
          "name": "punctuation.section.embedded.begin.xslate"
        },
        "2": {
          "name": "punctuation.definition.comment.xslate"
        },
        "3": {
          "name": "comment.line.content.xslate"
        },
        "4": {
          "name": "punctuation.section.embedded.end.xslate"
        }
      }
    },
    "xslate-tag": {
      "name": "meta.embedded.block.xslate",
      "begin": "(<:)(-)?",
      "beginCaptures": {
        "1": {
          "name": "punctuation.section.embedded.begin.xslate"
        },
        "2": {
          "name": "keyword.operator.chomp.xslate"
        }
      },
      "end": "(-)?(:>)",
      "endCaptures": {
        "1": {
          "name": "keyword.operator.chomp.xslate"
        },
        "2": {
          "name": "punctuation.section.embedded.end.xslate"
        }
      },
      "patterns": [
        {
          "include": "#xslate-expression"
        }
      ]
    },
    "xslate-line-directive": {
      "name": "meta.line.directive.xslate",
      "match": "^(\\s*)(:)\\s*(.*)$",
      "captures": {
        "2": {
          "name": "punctuation.definition.directive.xslate"
        },
        "3": {
          "patterns": [
            {
              "include": "#xslate-expression"
            }
          ]
        }
      }
    },
    "xslate-expression": {
      "patterns": [
        {
          "include": "#xslate-comment"
        },
        {
          "include": "#xslate-string"
        },
        {
          "include": "#xslate-number"
        },
        {
          "include": "#xslate-constant"
        },
        {
          "include": "#xslate-keyword"
        },
        {
          "include": "#xslate-operator"
        },
        {
          "include": "#xslate-variable"
        },
        {
          "include": "#xslate-function-call"
        },
        {
          "include": "#xslate-method-call"
        },
        {
          "include": "#xslate-filter"
        },
        {
          "include": "#xslate-array"
        },
        {
          "include": "#xslate-hash"
        },
        {
          "include": "#xslate-parens"
        }
      ]
    },
    "xslate-comment": {
      "name": "comment.line.number-sign.xslate",
      "match": "#.*$"
    },
    "xslate-string": {
      "patterns": [
        {
          "name": "string.quoted.double.xslate",
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.xslate"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.xslate"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.xslate",
              "match": "\\\\[\\\\\"nrtbf]"
            },
            {
              "include": "#xslate-variable"
            }
          ]
        },
        {
          "name": "string.quoted.single.xslate",
          "begin": "'",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.xslate"
            }
          },
          "end": "'",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.xslate"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.xslate",
              "match": "\\\\[\\\\']"
            }
          ]
        }
      ]
    },
    "xslate-number": {
      "patterns": [
        {
          "name": "constant.numeric.hex.xslate",
          "match": "\\b0[xX][0-9A-Fa-f]+\\b"
        },
        {
          "name": "constant.numeric.float.xslate",
          "match": "\\b\\d+\\.\\d+(?:[eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.xslate",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "xslate-constant": {
      "patterns": [
        {
          "name": "constant.language.xslate",
          "match": "\\b(nil|null|true|false)\\b"
        },
        {
          "name": "constant.language.special.xslate",
          "match": "\\b(__FILE__|__LINE__|__ROOT__)\\b"
        }
      ]
    },
    "xslate-keyword": {
      "patterns": [
        {
          "name": "keyword.control.xslate",
          "match": "\\b(if|elsif|else|unless|given|when|default|for|while|last|next|macro|block|include|cascade|with|around|before|after|super|override|constant)\\b"
        },
        {
          "name": "storage.type.xslate",
          "match": "\\b(my)\\b"
        },
        {
          "name": "keyword.operator.logical.word.xslate",
          "match": "\\b(and|or|not|defined)\\b"
        }
      ]
    },
    "xslate-operator": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.xslate",
          "match": "->"
        },
        {
          "name": "keyword.operator.assignment.xslate",
          "match": "="
        },
        {
          "name": "keyword.operator.comparison.xslate",
          "match": "(==|!=|<=|>=|<|>|eq|ne|lt|le|gt|ge)"
        },
        {
          "name": "keyword.operator.arithmetic.xslate",
          "match": "(\\+|-|\\*|/|%|\\*\\*)"
        },
        {
          "name": "keyword.operator.string.xslate",
          "match": "~"
        },
        {
          "name": "keyword.operator.logical.xslate",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.ternary.xslate",
          "match": "(\\?|:)"
        },
        {
          "name": "keyword.operator.range.xslate",
          "match": "\\.\\."
        },
        {
          "name": "punctuation.separator.comma.xslate",
          "match": ","
        },
        {
          "name": "punctuation.separator.pair.xslate",
          "match": "=>"
        }
      ]
    },
    "xslate-variable": {
      "patterns": [
        {
          "name": "variable.other.special.xslate",
          "match": "(\\$~)([a-zA-Z_][a-zA-Z0-9_]*)(?:\\.(index|count|is_first|is_last|size|body|cycle))?",
          "captures": {
            "1": {
              "name": "punctuation.definition.variable.xslate"
            },
            "2": {
              "name": "variable.other.loop.xslate"
            },
            "3": {
              "name": "variable.other.property.xslate"
            }
          }
        },
        {
          "name": "variable.other.xslate",
          "match": "(\\$)([a-zA-Z_][a-zA-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "punctuation.definition.variable.xslate"
            },
            "2": {
              "name": "variable.other.readwrite.xslate"
            }
          }
        },
        {
          "name": "variable.other.property.xslate",
          "match": "(?<=\\.)([a-zA-Z_][a-zA-Z0-9_]*)(?![\\s]*\\()"
        }
      ]
    },
    "xslate-function-call": {
      "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()",
      "name": "entity.name.function.xslate",
      "captures": {
        "1": {
          "patterns": [
            {
              "name": "support.function.builtin.xslate",
              "match": "\\b(mark_raw|html_escape|uri_escape|is_array_ref|is_hash_ref|dump|defined)\\b"
            },
            {
              "name": "entity.name.function.xslate",
              "match": ".*"
            }
          ]
        }
      }
    },
    "xslate-method-call": {
      "match": "(?<=\\.)([a-zA-Z_][a-zA-Z0-9_]*)(?=\\s*\\()",
      "captures": {
        "1": {
          "patterns": [
            {
              "name": "support.function.method.array.xslate",
              "match": "\\b(first|last|size|join|reverse|sort|map|reduce|merge)\\b"
            },
            {
              "name": "support.function.method.hash.xslate",
              "match": "\\b(keys|values|kv|size|merge)\\b"
            },
            {
              "name": "entity.name.function.method.xslate",
              "match": ".*"
            }
          ]
        }
      }
    },
    "xslate-filter": {
      "match": "(\\|)\\s*([a-zA-Z_][a-zA-Z0-9_]*)",
      "captures": {
        "1": {
          "name": "keyword.operator.pipe.xslate"
        },
        "2": {
          "patterns": [
            {
              "name": "support.function.filter.xslate",
              "match": "\\b(html|uri|mark_raw)\\b"
            },
            {
              "name": "entity.name.function.filter.xslate",
              "match": ".*"
            }
          ]
        }
      }
    },
    "xslate-array": {
      "name": "meta.structure.array.xslate",
      "begin": "\\[",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.array.begin.xslate"
        }
      },
      "end": "\\]",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.array.end.xslate"
        }
      },
      "patterns": [
        {
          "include": "#xslate-expression"
        }
      ]
    },
    "xslate-hash": {
      "name": "meta.structure.hash.xslate",
      "begin": "\\{",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.hash.begin.xslate"
        }
      },
      "end": "\\}",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.hash.end.xslate"
        }
      },
      "patterns": [
        {
          "include": "#xslate-expression"
        }
      ]
    },
    "xslate-parens": {
      "begin": "\\(",
      "beginCaptures": {
        "0": {
          "name": "punctuation.section.parens.begin.xslate"
        }
      },
      "end": "\\)",
      "endCaptures": {
        "0": {
          "name": "punctuation.section.parens.end.xslate"
        }
      },
      "patterns": [
        {
          "include": "#xslate-expression"
        }
      ]
    }
  }
}